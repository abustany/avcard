<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.bustany.avcard.MainActivity">

    <Button
        android:id="@+id/button_pick_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_pick_folder"
        android:onClick="onChooseFolderClicked" />

    <Button
        android:id="@+id/button_test_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_test_import"
        android:enabled="false"
        android:onClick="onImportClicked"
        android:layout_below="@id/button_pick_folder"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_import"
        android:enabled="false"
        android:onClick="onImportClicked"
        android:layout_below="@id/button_test_import"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/label_import_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/import_status_idle"
        android:layout_below="@id/button_import"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
